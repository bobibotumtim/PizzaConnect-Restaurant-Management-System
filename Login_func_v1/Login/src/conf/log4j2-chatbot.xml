<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <!-- Chatbot File Appender -->
        <RollingFile name="ChatbotFile" fileName="logs/chatbot.log"
                     filePattern="logs/chatbot-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
        
        <!-- Chatbot Error File Appender -->
        <RollingFile name="ChatbotErrorFile" fileName="logs/chatbot-error.log"
                     filePattern="logs/chatbot-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
        
        <!-- Analytics File Appender for chatbot metrics -->
        <RollingFile name="ChatbotAnalytics" fileName="logs/chatbot-analytics.log"
                     filePattern="logs/chatbot-analytics-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss}|%msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="90"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <!-- Chatbot package loggers -->
        <Logger name="chatbot" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ChatbotFile"/>
            <AppenderRef ref="ChatbotErrorFile"/>
        </Logger>
        
        <!-- Analytics logger -->
        <Logger name="chatbot.analytics" level="INFO" additivity="false">
            <AppenderRef ref="ChatbotAnalytics"/>
        </Logger>
        
        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
